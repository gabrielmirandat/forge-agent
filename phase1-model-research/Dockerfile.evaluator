FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir httpx pydantic

# Copy evaluation scripts
COPY evaluate_model.py /app/
COPY validate_output.py /app/

# Create results directory
RUN mkdir -p /app/results

# Make scripts executable
RUN chmod +x /app/evaluate_model.py /app/validate_output.py

# Default command (can be overridden)
CMD ["python", "evaluate_model.py", "--help"]

